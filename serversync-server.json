{
  "general": {
    "push_client_mods": false,
    "sync_mode": 2
  },
  "connection": {
    "port": 38067,
    "buffer": 65536
  },
  "rules": {
    "directories": [
      {
        "path": "mods",
        "mode": "mirror"
      }
    ],
    "files": {
      "include": [
        "mods/**",
	"clientmodpackmods/**"
      ],
      "ignore": [
        "**/serversync-*.jar",
        "**/serversync-*.cfg"
      ],
      "redirect": [
      	{ "pattern": "clientmodpackmods/**", "redirectTo": "mods/**" }
      ]
    }
  },
  "misc": {
    "locale": "en_US"
  }
}